<h1>Index</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= check_box("task", task.id, {checked: task.completed}) %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Delete', task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>
